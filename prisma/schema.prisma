

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int     @id @default(autoincrement())
  firstName    String
  lastName     String
  email   String  @unique
  password Boolean 
  image    String
  userChats  userchat[]
  aiChat     Aichat[]
}

model  userchat {
  userId  Int   @unique // Scalar field for relation
  user    User   @relation(fields: [userId], references: [id])
  chat    String[] 
  createdAt  DateTime    @default(now())
}
model Aichat {
  userid    Int  @unique
  user  User  @relation(fields: [userid], references: [id])
  chat     String[]
  createdAt  DateTime   @default(now())
}
